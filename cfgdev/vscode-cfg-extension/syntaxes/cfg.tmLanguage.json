{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CFG",
  "scopeName": "source.cfg",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#foreign-keys"
    },
    {
      "include": "#metadata"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.cfg",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.cfg",
          "match": "\\b(struct|interface|table|list|map)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.cfg",
          "match": "\\b(bool|int|long|float|str|text)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.cfg",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.cfg",
              "match": "\\\\['\\\"?bfnrtv\\\\/]"
            },
            {
              "name": "constant.character.escape.unicode.cfg",
              "match": "\\\\u[0-9a-fA-F]{4}"
            },
            {
              "name": "constant.character.escape.hex.cfg",
              "match": "\\\\x[0-9a-fA-F]+"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.cfg",
          "match": "\\b[+-]?[0-9]+\\b"
        },
        {
          "name": "constant.numeric.hex.cfg",
          "match": "\\b[+-]?0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.cfg",
          "match": "\\b[+-]?[0-9]+\\.[0-9]*([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.language.boolean.cfg",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.type.struct.cfg",
          "match": "(?<=struct\\s+)[a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*)*"
        },
        {
          "name": "entity.name.type.interface.cfg",
          "match": "(?<=interface\\s+)[a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*)*"
        },
        {
          "name": "entity.name.type.table.cfg",
          "match": "(?<=table\\s+)[a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*)*"
        },
        {
          "name": "variable.other.field.cfg",
          "match": "(?<=:\\s*)[a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*)*"
        }
      ]
    },
    "foreign-keys": {
      "patterns": [
        {
          "name": "constant.language.foreign-key.cfg",
          "match": "(->|=>)"
        }
      ]
    },
    "metadata": {
      "patterns": [
        {
          "name": "meta.annotation.cfg",
          "begin": "\(",
          "end": "\)",
          "patterns": [
            {
              "name": "entity.other.attribute-name.cfg",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            },
            {
              "name": "keyword.operator.assignment.cfg",
              "match": "="
            },
            {
              "include": "#strings"
            },
            {
              "include": "#numbers"
            }
          ]
        }
      ]
    }
  }
}