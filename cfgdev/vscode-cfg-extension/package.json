{
  "name": "cfg-editor-support",
  "displayName": "CFG Editor Support",
  "description": "VSCode extension for .cfg configuration files with syntax highlighting, auto-completion, and navigation support",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:cfg",
    "onCommand:cfg.validate",
    "onCommand:cfg.gotoDefinition"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "cfg",
        "aliases": [
          "CFG",
          "cfg"
        ],
        "extensions": [
          ".cfg"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cfg",
        "scopeName": "source.cfg",
        "path": "./syntaxes/cfg.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "cfg",
        "scopes": {
          "struct": [
            "entity.name.type.struct.cfg"
          ],
          "interface": [
            "entity.name.type.interface.cfg"
          ],
          "table": [
            "entity.name.type.table.cfg"
          ],
          "field": [
            "variable.other.field.cfg"
          ],
          "keyword": [
            "keyword.control.cfg"
          ],
          "type": [
            "entity.name.type.cfg"
          ],
          "string": [
            "string.quoted.single.cfg"
          ],
          "number": [
            "constant.numeric.cfg"
          ],
          "comment": [
            "comment.line.double-slash.cfg"
          ],
          "foreignKey": [
            "constant.language.foreign-key.cfg"
          ],
          "metadata": [
            "meta.annotation.cfg"
          ]
        }
      }
    ],
    "commands": [
      {
        "command": "cfg.validate",
        "title": "Validate CFG Configuration",
        "category": "CFG"
      },
      {
        "command": "cfg.gotoDefinition",
        "title": "Go to Definition",
        "category": "CFG"
      },
      {
        "command": "cfg.findReferences",
        "title": "Find References",
        "category": "CFG"
      }
    ],
    "configuration": {
      "title": "CFG Editor Support",
      "properties": {
        "cfg.enableSyntaxHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Enable syntax highlighting for .cfg files"
        },
        "cfg.enableAutoCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-completion for .cfg files"
        },
        "cfg.validationLevel": {
          "type": "string",
          "enum": [
            "none",
            "syntax",
            "semantic",
            "full"
          ],
          "default": "semantic",
          "description": "Validation level for .cfg files"
        },
        "cfg.enableTypeNavigation": {
          "type": "boolean",
          "default": true,
          "description": "Enable type definition navigation"
        },
        "cfg.enableForeignKeyNavigation": {
          "type": "boolean",
          "default": true,
          "description": "Enable foreign key navigation"
        },
        "cfg.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug mode for detailed logging"
        },
        "cfg.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug",
            "verbose"
          ],
          "default": "info",
          "description": "Log level for the extension"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "generate-parser": "antlr4ts -visitor grammar/Cfg.g4 -o src/parser",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/vsce": "^3.6.2",
    "antlr4ts": "^0.5.0-alpha.4",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "eslint": "^8.20.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4"
  }
}
